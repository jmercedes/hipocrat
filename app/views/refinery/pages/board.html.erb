<!--Content-->
<section id="page-title">
  <div class="container">
    <div class="row">
      <div class="span12 text-center">
        <h3><%= @page.title %></h3>
      </div>
    </div>
  </div>
</section>


<!--Content-->
<section id="content2">
  <div class="container">
    
    <div class="row margin-40">
			
			<% @page.children.each do |child| %>
      
      <!--Team Member-->
      <div class="span4 margin-30">
        <div class="row-fluid">
          <div class="span12 team-member">
            	<%= raw child.content_for(:pic) %>
          </div>
          
          <div class="row-fluid text-center">
            <div class="span12 pull-left team-info">
              <% name_position = child.title.split("|") %>
					    <p class="bio_title"><strong><%= name_position[0] %></strong> | <span><%= name_position[1] %></span></p>
            </div>
          
          </div>
        </div>
      </div>
      <% end %> 

  
        
      
      
      </div><!--End Team Member Row-->
      
  </div>
</section>