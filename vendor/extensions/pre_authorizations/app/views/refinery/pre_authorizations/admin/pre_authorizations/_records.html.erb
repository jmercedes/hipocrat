<%= render 'refinery/admin/search_header', :url => refinery.pre_authorizations_admin_pre_authorizations_path %>
<% if searching? %>
  <% if @pre_authorizations.any? %>
    <ul>
      <%= render :partial => 'pre_authorization', :collection => @pre_authorizations %>
    </ul>
  <% else %>
    <p><%= t('no_results', :scope => 'refinery.admin.search') %></p>
  <% end %>
<% else %>
  <% if @grouped_pre_authorizations.any? -%>
    <% @grouped_pre_authorizations.each do |container| %>
      <h3><%= l((pre_authorization_group = container.last).first.created_at, :format => :short) %></h3>
      <ul>
        <%= render :partial => 'pre_authorization', :collection => pre_authorization_group %>
      </ul>
    <% end %>
  <% else -%>
    <p>
      <strong><%= t('no_pre_authorizations', :scope => 'refinery.pre_authorizations.admin.pre_authorizations.index') %></strong>
    </p>
  <% end -%>
<% end %>
