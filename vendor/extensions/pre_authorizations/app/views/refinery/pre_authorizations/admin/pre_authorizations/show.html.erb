<div id='records'>
  <h2><%= t('.pre_authorization') %></h2>
  <table id='pre_authorization' class='inquiry'>
      <tr>
        <td>
          <strong>
            <%= t('.full_name', :default => t('activerecord.attributes.pre_authorization.full_name')) %>
          </strong>
        </td>
        <td>
          <%= @pre_authorization.full_name %>
        </td>
      </tr>
      <tr>
        <td>
          <strong>
            <%= t('.email', :default => t('activerecord.attributes.pre_authorization.email')) %>
          </strong>
        </td>
        <td>
          <%= @pre_authorization.email %>
        </td>
      </tr>
      <tr>
        <td>
          <strong>
            <%= t('.phone', :default => t('activerecord.attributes.pre_authorization.phone')) %>
          </strong>
        </td>
        <td>
          <%= @pre_authorization.phone %>
        </td>
      </tr>
      <tr>
        <td>
          <strong>
            <%= t('.personal_id', :default => t('activerecord.attributes.pre_authorization.personal_id')) %>
          </strong>
        </td>
        <td>
          <%= @pre_authorization.identification_image %>
        </td>
      </tr>
      <tr>
        <td>
          <strong>
            <%= t('.insurance', :default => t('activerecord.attributes.pre_authorization.insurance')) %>
          </strong>
        </td>
        <td>
          <%= @pre_authorization.insurance %>
        </td>
      </tr>
      <tr>
        <td>
          <strong>
            <%= t('.prescription', :default => t('activerecord.attributes.pre_authorization.prescription')) %>
          </strong>
        </td>
        <td>
          <%= @pre_authorization.prescription %>
        </td>
      </tr>
  </table>
</div>
<div id='actions'>
  <h2><%= t('.details')%></h2>
  <p>
    <strong><%= t('.age') %>:</strong> <%= time_ago_in_words(@pre_authorization.created_at) %>
  </p>
  <h2><%= t('.actions') %></h2>
  <ul>
    <li>
      <%= link_to t('.back_to_all_pre_authorizations'), refinery.url_for(:action => 'index'),
                   :class => "back_icon" %>
    </li>
    <li>
      <%= link_to t('delete', :scope => 'refinery.pre_authorizations.admin.pre_authorizations'),
                  refinery.pre_authorizations_admin_pre_authorization_path(@pre_authorization),
                  :class => 'delete_icon no-tooltip confirm-delete',
                  :title => t('delete', :scope => 'refinery.pre_authorizations.admin.pre_authorizations'),
                  :'data-confirm' => t('message', :scope => 'refinery.admin.delete', :title => @pre_authorization.name),
                  :'data-method' => "delete" %>
    </li>
  </ul>
</div>
