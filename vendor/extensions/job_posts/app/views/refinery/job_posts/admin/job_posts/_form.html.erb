<%= form_for [refinery, :job_posts_admin, @job_post] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @job_post,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :position -%>
    <%= f.text_field :position, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:description],
                :object => "job_posts/job_post" -%>
  </div>

  <div class='field'>
    <%= f.label :opening_date -%>
    <%= f.datetime_select :opening_date -%>
  </div>

  <div class='field'>
    <%= f.label :closing_date -%>
    <%= f.datetime_select :closing_date -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.job_posts.admin.job_posts.job_post'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @job_post.position) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
