<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(job_post) -%>">
  <span class='title'>
    <%= job_post.position %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.job_posts_job_post_path(job_post),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_job_posts_admin_job_post_path(job_post),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.job_posts_admin_job_post_path(job_post),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => job_post.position),
        :method => :delete %>
  </span>
</li>
