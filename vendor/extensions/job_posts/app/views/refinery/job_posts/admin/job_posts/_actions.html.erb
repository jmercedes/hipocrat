<ul>
  <% if ::Refinery::JobPosts::Admin::JobPostsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.job_posts_admin_job_posts_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_job_posts_admin_job_post_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::JobPosts::Admin::JobPostsController.sortable? && ::Refinery::JobPosts::JobPost.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Job Posts"),
                 refinery.job_posts_admin_job_posts_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Job Posts"),
                 refinery.job_posts_admin_job_posts_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
